<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="900.0" prefWidth="900.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.javafxproject.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <HBox alignment="TOP_RIGHT" prefHeight="46.0" prefWidth="894.0">
      <children>
         <Button fx:id="ajout" mnemonicParsing="false" prefHeight="46.0" prefWidth="144.0" text="Ajouter équipe">
            <HBox.margin>
               <Insets right="20.0" />
            </HBox.margin>
         </Button>
      
                <Button fx:id="CreateAccount" maxHeight="-Infinity" maxWidth="-Infinity" onAction="#creerCompte" prefHeight="46.0" prefWidth="141.0" text="Créer Compte" />
      </children>
   </HBox>
   <Label alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="110.0" prefWidth="243.0" text="Connectez-vous" textAlignment="CENTER" textOverrun="CENTER_WORD_ELLIPSIS">
      <font>
         <Font name="Eras Demi ITC" size="31.0" />
      </font>
      <VBox.margin>
         <Insets top="50.0" />
      </VBox.margin>
   </Label>
   <VBox alignment="CENTER" prefHeight="73.0" prefWidth="360.0">
      <children>

                                  <Label text="Email" textAlignment="CENTER">
              <font>
                  <Font size="20.0" />
              </font>
          </Label>
          <TextField fx:id="email" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="40.0" prefWidth="300.0">
              <font>
                  <Font size="14.0" />
              </font>
            <VBox.margin>
               <Insets />
            </VBox.margin>
          </TextField>
      </children>
      <VBox.margin>
         <Insets top="20.0" />
      </VBox.margin>
   </VBox>
   <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="73.0" prefWidth="360.0">
      <children>

                      <Label text="Mot de passe">
              <font>
                  <Font size="20.0" />
              </font>
          </Label>
          <TextField fx:id="password" prefHeight="40.0" prefWidth="360.0" />
      </children>
   </VBox>

    <Label fx:id="welcomeText" prefHeight="25.0" prefWidth="0.0" textFill="#bf2020">
        <font>
            <Font size="16.0" />
        </font>
    </Label>

    <Button fx:id="connect" onAction="#connect" prefHeight="46.0" prefWidth="130.0" text="Connecter">
        <VBox.margin>
            <Insets top="20.0" />
        </VBox.margin>
    </Button>

    <Button fx:id="resetPassword" onAction="#resetPassword" prefHeight="52.0" prefWidth="174.0" text="Mot de passe oublié ?">
        <VBox.margin>
            <Insets top="10.0" />
        </VBox.margin>
    </Button>
</VBox>
